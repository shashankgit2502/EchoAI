          "add",
          "subtract",
          "multiply",
          "divide",
          "power",
          "mod",
          "sqrt",
          "abs",
          "exp",
          "sum",
          "mean",
          "median",
          "variance",
          "stddev",
          "min",
          "max",
          "dot",
          "vector_add",
          "vector_subtract",
          "magnitude",
          "matrix_add",
          "matrix_multiply",
          "transpose"
        ],
        "description": "Mathematical operation to perform"
      },
      "values": {
        "type": "array",
        "items": {
          "type": "number"
        },
        "description": "Array of numbers for arithmetic and statistical operations"
      },
      "vectors": {
        "type": "array",
        "items": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "description": "Array of vectors for linear algebra operations"
      },
      "matrices": {
        "type": "array",
        "items": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "number"
            }
          }
        },
        "description": "Array of matrices for matrix operations"
      },
      "precision": {
        "type": "integer",
        "default": 2,
        "description": "Number of decimal places for rounding"
      },
      "rounding": {
        "type": "string",
        "enum": [
          "round",
          "floor",
          "ceil"
        ],
        "default": "round",
        "description": "Rounding method to apply"
      }
    },
    "required": [
      "operation"
    ]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "operation": {
        "type": "string",
        "description": "Operation that was performed"
      },
      "result": {
        "description": "Result of the calculation (number or array)"
      }
    },
    "required": [
      "operation",
      "result"
    ]
  },
