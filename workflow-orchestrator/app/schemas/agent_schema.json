{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AgentDefinition",
  "description": "Agent configuration schema - defines agent behavior, capabilities, and LLM settings",
  "type": "object",
  "required": ["id", "name", "role", "responsibilities", "system_prompt", "llm_config"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$",
      "description": "Unique agent identifier (lowercase, underscore-separated)",
      "minLength": 3,
      "maxLength": 50
    },
    "name": {
      "type": "string",
      "description": "Human-readable agent name",
      "minLength": 3,
      "maxLength": 100
    },
    "role": {
      "type": "string",
      "description": "Concise role description",
      "minLength": 5,
      "maxLength": 100
    },
    "responsibilities": {
      "type": "array",
      "description": "List of specific tasks this agent handles",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "string",
        "minLength": 5,
        "maxLength": 200
      }
    },
    "system_prompt": {
      "type": "string",
      "description": "Detailed instructions for the agent's LLM",
      "minLength": 50,
      "maxLength": 10000
    },
    "tools": {
      "type": "array",
      "description": "List of tool names this agent can use",
      "maxItems": 20,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "default": []
    },
    "llm_config": {
      "type": "object",
      "required": ["model", "temperature"],
      "properties": {
        "model": {
          "type": "string",
          "description": "LLM model identifier (e.g., openrouter/mistralai/devstral-2512:free)"
        },
        "temperature": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 2.0,
          "description": "LLM temperature (0=deterministic, 2=creative)"
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 100,
          "maximum": 128000,
          "default": 2000,
          "description": "Maximum tokens to generate"
        },
        "top_p": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "default": 1.0,
          "description": "Nucleus sampling parameter"
        }
      }
    },
    "input_schema": {
      "type": "object",
      "description": "Expected input structure for this agent",
      "additionalProperties": true
    },
    "output_schema": {
      "type": "object",
      "description": "Expected output structure from this agent",
      "additionalProperties": true
    },
    "is_master": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is a master/coordinator agent (for hierarchical patterns)"
    },
    "permissions": {
      "type": "object",
      "properties": {
        "can_delegate": {
          "type": "boolean",
          "default": false,
          "description": "Can delegate tasks to other agents"
        },
        "can_call_agents": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
          },
          "description": "List of agent IDs this agent can call"
        },
        "max_tool_calls": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50,
          "default": 10,
          "description": "Maximum tool calls per execution"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
